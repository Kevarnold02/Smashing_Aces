<!-- user information handlebars -->
<div class="container">
  <div class="section">
    <h3 class="thin center-align"> User Profile </h3>
    	<ul class="collection with-header">
    		<li class="collection-header center-align">
    			<h4>
            <img src="{{users.photo}}" class="circle responsive-img">
          {{users.username}}</h4>
    		</li>
    		<li class="collection-item">
          <div class="row">
            <div class="col s12 m8 l6">
      			 <h5 class="thin"><b>User Id #:</b> {{users.id}}</h5>
            </div>
          </div>
    		</li>
    		<li class="collection-item">
          <div class="row">
            <div class="col s12 m8 l6">
    	     		<h5 class="thin"><b>E-mail:</b> {{users.email}}</h5>
            </div>
          </div>
        </li>
        <li class="collection-item">
          <div class="row">
            <div class="col s12 m8 l6">
              <h5 class="thin"><b>Play money in Bank: </b>${{users.play_money}}</h5>
            </div>
            <div class="col s12 m4 l6">
              <button data-target="modal3" class="waves-effect waves-green waves-accent-4 btn-flat btn-large modal-trigger"><i class="material-icons">add</i> Add Money</button>
              <!-- Modal Structure -->
              <div id="modal3" class="modal modal-fixed-footer">
                <div class="modal-content">
                  <h4 class="center-align">Add Money to Bank</h4>
                  <form class="col s12" action="/user/update/{{users.id}}?_method=PUT" method="POST">
                  <div class="row">
                    <div class="input-field col s12">
                      <input id="playMoney" type="text" name="play_money" class="validate">
                      <label for="playMoney">Play Money</label>
                    </div>
                  </div>
                  <button class="btn waves-effect waves-light green lighten-2 align-center" type="submit" name="action">Submit
                    <i class="material-icons right green lighten-2">send</i>
                  </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </li>
        <li class="center">
          <!-- sign out button -->
          <div class="col s12 m6 l2 offset-l4">
            <form action='/user/sign-out' method="GET">
              <button class="btn btn-large waves-effect waves-light grey darken-4 align-center bold" type="submit">Sign Out
                <i class="material-icons right grey darken-4">highlight_off</i>
              </button>
            </form>
          </div>
          <!-- play game button -->
          <div class="col s12 m6 l2 offset-l4">
            <form id='playGame' action="/user/game/{{users.id}}" method="GET">
              <button data-target="/user/game/{{users.id}}" class="btn btn-large waves-effect waves-light grey darken-4 align-center bold modal-trigger" type="submit">Play Game!
                <i class="material-icons right grey darken-4">casino</i>
              </button>
            </form>
          </div>
        </li>
    	</ul>
  </div>
</div>


