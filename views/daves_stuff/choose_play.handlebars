
<p>Your antebet is: {{this.bet}}</p>
<p>Your Pair Plus bet is: {{this.pairbet}}</p>


<p>Dealer hand</p>
<br>
<div>
	{{#each dealerHand}}
		<img src='/assets/cardimages/back.bmp'>
	{{/each}}
</div>
<br>


<p>Player hand</p>
<br>
<div>
	{{#each playerHand}}
		<img src='/assets/cardimages/{{this.img}}'>
	{{/each}}
</div>
<br>




<form action = '/playdecision' method = 'post'>
	<input type="hidden" name="pairplusbet" value="{{this.pairbet}}">
  <input type="hidden" name="antebet" value="{{this.bet}}">
  <input type="radio" name="decision" value="fold"> Fold<br>
  <input type="radio" name="decision" value="bet" checked> Bet<br>
  <button type = 'submit'>Choose</button>
</form> 